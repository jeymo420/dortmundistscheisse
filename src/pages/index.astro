---
import { capitalize } from "@/utils/strings";
import Main from "@/components/Main.astro";
import Search from "@/components/Search.astro";
import Shop from "@/components/Shop.astro";

const {
	target,
}: {
	target: string;
} = Astro.locals;

const SEARCH_TITLE = "Wer ist scheis.se?";

const targets = {
	"": { component: Search, title: SEARCH_TITLE },
	search: { component: Search, title: SEARCH_TITLE },
	www: { component: Search, title: SEARCH_TITLE },
	shop: { component: Shop, title: "Ist schei.se Shop" },
	store: { component: Shop, title: "Ist schei.se Shop" },
};

const Component = targets?.[target]?.component || Main;
const title = targets?.[target]?.title || `${capitalize(target)} ist schei√üe`;
---

<Component {title} />
